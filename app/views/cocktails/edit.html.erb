<h1>Editing cocktail</h1>

<% form_for(@cocktail) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Select ingredient to add', selectingredient_cocktail_path(@cocktail) %> |
<%= link_to 'Show', @cocktail %> |
<%= link_to 'Back', cocktails_path %>
