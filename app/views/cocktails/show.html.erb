<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @cocktail.name %>
</p>
<p>
  <b>Glass:</b>
  <%= @cocktail.glass %>
</p>
<p>
  <b>AKA:</b>
  <%= @cocktail.aka %>
</p>
<p>
  <b>Variant:</b>
  <%= @cocktail.variant %>
</p>
<p>
  <b>Rate:</b>
  <%= @cocktail.rate %>
</p>
<fieldset>
  <p>
    <b>Method:</b>
  </p>
    <%= raw(@cocktail.method) %>
  <p>
    <b>Comment:</b>
  </p>
    <%= raw(@cocktail.comment) %>
  <p>
    <b>Origin:</b>
  </p>
    <%= raw(@cocktail.origin) %>
  <p>
    <b>Garnish:</b>
  </p>
    <%= raw(@cocktail.garnish) %>
