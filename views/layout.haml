!!! XML
!!! 1.1
%html{ :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title= @title
    %meta{:name => "author", :content => "Marco Tessari"}
    %meta{:name => "viewport", :content=>"width=device-width, initial-scale=1.0"}
    %link{:href => url("css/bootstrap.min.css"), :rel => "stylesheet", :media => "screen", :type => "text/css" }
    %link{:href => url("css/rockstails.css"), :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Nothing+You+Could+Do", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Bitter:400,700", :rel => "stylesheet", :type => "text/css"}
  %body.container
    .hero-unit
      .row
        .span12
          %h1= @title
          %h3 Easely find a tasty cocktail to mix.
          #search.row
            .span6.offset2
              %form.form-search{:action => url("/search"), :method => "get"}
                .input-prepend
                  %a.btn.btn-warning{:href => "#", :onclick => "$(this).closest('form').submit();"} 
                    %i.icon-glass
                    Search
                  %input.span2.search-query{:type => "text", :name => "criteria", :value => @criteria, :placeholder => "name or ingredients"}
                %select.input-small{:name => "usebar"}
                  %option{:value => "no", :selected => @usebar} No bar
                  %option{:value => "yes", :selected => @usebar} Marco
    #content= yield
    %script{:src => url("js/jquery.js")}
    %script{:src => url("js/bootstrap.min.js")}
    :javascript
      $("[name=usebar]").keypress(function(event) {
        if (event.which == 13) {
          event.preventDefault();
          $(this).closest('form').submit();
        }
      });

