!!! XML
!!! 1.1
%html{ :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title= @title
    %meta{:name => "author", :content => "Marco Tessari"}
    %meta{:name => "viewport", :content=>"width=device-width, initial-scale=1.0"}
    %link{:href => url("css/bootstrap.min.css"), :rel => "stylesheet", :media => "screen", :type => "text/css" }
    %link{:href => url("css/rockstails.css"), :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Nothing+You+Could+Do", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Bitter:400,700", :rel => "stylesheet", :type => "text/css"}
  %body.container
    .jumbotron
      .row
        .col-xs-9
          %h1= @title
          %h3 Easely find a tasty cocktail to mix.
          #search.row
            %form{:action => url("/search"), :method => "get"}
              .row.col-xs-6.input-group
                .span.input-group-btn
                  %button.btn.btn-warning{:type => "button", :href => "#", :onclick => "$(this).closest('form').submit();"} 
                    %span.glyphicon.glyphicon-glass
                    Search
                  %input.form-control{:type => "text", :name => "criteria", :value => @criteria, :placeholder => "name or ingredients"}
                  %select.form-control{:name => "usebar"}
                    %option{:value => "no", :selected => @usebar} No bar
                    %option{:value => "yes", :selected => @usebar} Marco
    #content= yield
    %script{:src => url("js/jquery.js")}
    :javascript
      $("[name=usebar]").keypress(function(event) {
        if (event.which == 13) {
          event.preventDefault();
          $(this).closest('form').submit();
        }
      });

